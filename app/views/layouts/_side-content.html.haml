.side-content
  .side-content__user
    %h5
      = current_user.name
    .side-content__user__icons
      = link_to new_group_path do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_registration_path do
        %i.fa.fa-cog
  .side-content__groups
    - @groups.each do |group|
      = link_to group_messages_path(group) do
        %ul.side-content__group
          %li.side-content__group__name
            = group.name
          %li.side-content__group__message
            = group.messages.last.try(:body)
